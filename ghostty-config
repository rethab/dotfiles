# ln -s ~/dev/private/dotfiles/ghostty-config ~/Library/Application\ Support/com.mitchellh.ghostty/config



font-size = 15
window-inherit-font-size = false

# fixes Ctrl-[ to escape insert mode: https://github.com/ghostty-org/ghostty/discussions/7373
keybind = ctrl+[=text:\x1b
keybind = shift+enter=text:\n
