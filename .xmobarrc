Config { font = "-misc-fixed-*-*-*-*-12-*-*-*-*-*-*-*"
       , borderColor = "black"
       , border = TopB
       , bgColor = "#1c1c1c"
       , fgColor = "grey"
       , position = Top
       , lowerOnStart = False
       , overrideRedirect = False
       , commands = [ Run Wireless "wlp2s0" [] 30
                    , Run DynNetwork ["--template", "<rx>KB|<tx>KB"] 10
                    , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Battery [] 10
                    , Run Memory ["-t","RAM: <usedratio>%"] 10
                    , Run CoreTemp ["--template" , "Temp: <core0>|<core1>|<core2>", "--Low" , "70", "--High" , "80", "--low" , "green", "--normal" , "orange", "--high" , "red"] 50
                    , Run DiskU [("dm-0", "/ <usedp>%")] ["-L", "20", "-H", "50", "-m", "1", "-p", "3"] 20
                    , Run StdinReader
                    , Run Com "/usr/bin/zsh" ["-c", "setxkbmap -print | grep xkb_symbols | awk -F\"+\" '{print $2}'"] "keyboard" 30
                    , Run Com "dropbox-cli" ["status"] "dropbox" 30
                    , Run Volume "default" "Master" ["--template", "<fc=#ee9a00>Vol: <volume>%</fc> <status>"] 10
    		    , Run DateZone "%a %b %_d %Y %H:%M:%S" "de_DE.UTF-8" "Europe/Lisbon" "lisbonTime" 10
    		    , Run DateZone "%a %b %_d %Y %H:%M:%S" "de_DE.UTF-8" "Europe/Zurich" "frauenfeldTime" 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ <fc=#04b4ae>%dropbox%</fc> | <fc=#ff00bf>%cpu%</fc> | <fc=#ee9a00>%disku%</fc> | <fc=#04b4ae>%memory%</fc> | <fc=#ff00bf>%wlp2s0wi% (%dynnetwork%)</fc> | <fc=#04b4ae>%keyboard%</fc> | <fc=#ee9a00>%lisbonTime%</fc> | <fc=#04b4ae>%coretemp%</fc> | %default:Master%  | <fc=#ff00bf>%battery%</fc> "
       }
