Config { font = "-misc-fixed-*-*-*-*-10-*-*-*-*-*-*-*"
       , borderColor = "black"
       , border = TopB
       , bgColor = "#1c1c1c"
       , fgColor = "grey"
       , position = Top
       , lowerOnStart = False
       , commands = [ Run Wireless "wlp2s0" [] 30
                    , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Volume "default" "Master" [] 10
                    , Run Battery [] 10
                    , Run Memory ["-t","RAM: <usedratio>%"] 10
                    , Run DiskU [("sda2", "/ <usedp>% |"), ("sda3", "/home <usedp>%")] ["-L", "20", "-H", "50", "-m", "1", "-p", "3"] 20
                    , Run StdinReader
                    , Run Com "/usr/bin/zsh" ["-c", "setxkbmap -print | grep xkb_symbols | awk -F\"+\" '{print $2}'"] "keyboard" 30
                    , Run Com "dropbox-cli" ["status"] "dropbox" 30
    		    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ <fc=#04b4ae>%dropbox%</fc> | <fc=#ff00bf>%cpu%</fc> | <fc=#ee9a00>%disku%</fc> | <fc=#04b4ae>%memory%</fc> | <fc=#ff00bf>%wlp2s0wi%</fc> | <fc=#04b4ae>%keyboard%</fc> | <fc=#ff00bf>%default:Master%</fc> | <fc=#ee9a00>%date%</fc> | <fc=#04b4ae>%battery%</fc> "
       }
